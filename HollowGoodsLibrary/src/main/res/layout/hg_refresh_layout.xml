<?xml version="1.0" encoding="utf-8"?>
<com.hg.hollowgoods.Widget.SmartRefreshLayout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smartRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hg.hollowgoods.Widget.SmartRefreshLayout.header.MaterialHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hg.hollowgoods.Widget.SmartRefreshLayout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.hg.hollowgoods.Widget.SmartRefreshLayout.SmartRefreshLayout>