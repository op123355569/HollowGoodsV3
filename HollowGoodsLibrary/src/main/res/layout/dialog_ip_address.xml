<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.hg.hollowgoods.Widget.AutoShowDeleteLayout
            android:id="@+id/asdl_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_protocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Protocol"
                android:textSize="14sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="#121212" />

        </com.hg.hollowgoods.Widget.AutoShowDeleteLayout>

        <com.hg.hollowgoods.Widget.AutoShowDeleteLayout
            android:id="@+id/asdl_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IP"
                android:textSize="14sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="#121212" />

        </com.hg.hollowgoods.Widget.AutoShowDeleteLayout>

        <com.hg.hollowgoods.Widget.AutoShowDeleteLayout
            android:id="@+id/asdl_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Port"
                android:textSize="14sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="#121212" />

        </com.hg.hollowgoods.Widget.AutoShowDeleteLayout>

        <com.hg.hollowgoods.Widget.AutoShowDeleteLayout
            android:id="@+id/asdl_projectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Name"
                android:textSize="14sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="#121212" />

        </com.hg.hollowgoods.Widget.AutoShowDeleteLayout>

        <com.hg.hollowgoods.Widget.AutoShowDeleteLayout
            android:id="@+id/asdl_realmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_realmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Realm Name"
                android:textSize="14sp"
                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_underlineColor="#121212" />

        </com.hg.hollowgoods.Widget.AutoShowDeleteLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:textColor="@color/txt_color_dark"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ip_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="历史配置"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>