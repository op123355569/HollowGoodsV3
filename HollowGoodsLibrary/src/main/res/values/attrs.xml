<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Textview两端对齐的自定义属性-->
    <declare-styleable name="AlignTextView">
        <!-- 文本-->
        <attr name="text" format="string" />
        <!-- 后缀符号类型:全角、半角-->
        <attr name="suffixMode" format="enum">
            <enum name="full_width" value="1" />
            <enum name="half_width" value="2" />
        </attr>
    </declare-styleable>

    <!-- FloatingNavigationView自定义属性-->
    <declare-styleable name="MenuView">
        <!-- The menu resource to inflate and populate items from -->
        <attr name="menu" format="reference" />
        <!-- Layout resource to inflate as the header -->
        <attr name="headerLayout" format="reference" />
        <!-- If menu must be drawn below the FAB -->
        <attr name="drawMenuBelowFab" format="boolean" />
    </declare-styleable>

    <!-- 公共标题自定义属性-->
    <declare-styleable name="CommonTitleLayout">
        <!-- 是否需要阴影 默认 true -->
        <attr name="ctl_needShadow" format="boolean" />
        <!-- 是否开启头部 默认 false -->
        <attr name="ctl_openHeader" format="boolean" />
        <!-- 头部高度 默认 200dp -->
        <attr name="ctl_headerHeight" format="dimension" />
    </declare-styleable>

    <!-- 公共标题自定义属性-->
    <declare-styleable name="CommonTitleView">
        <!-- 是否需要阴影 默认 true -->
        <attr name="ctv_needShadow" format="boolean" />
        <!-- 是否始终显示 默认 true -->
        <attr name="ctv_alwaysShow" format="boolean" />
    </declare-styleable>

</resources>