<?xml version="1.0" encoding="utf-8"?>
<com.hg.hollowgoods.Widget.SwipeMenuRecyclerView.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/leftMenu"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/google_red"
        android:gravity="center"
        android:text="Left"
        android:textColor="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/solid_one"
            android:gravity="center"
            android:text="Left Menu"
            android:textColor="@color/white" />

    </FrameLayout>

</com.hg.hollowgoods.Widget.SwipeMenuRecyclerView.SwipeItemLayout>