<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_color_dark"
    android:orientation="vertical">

    <com.hg.hollowgoods.Widget.CommonTitleView
        android:id="@+id/commonTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 主体内容在此填写 -->

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- 刷新:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENRefreshView
                        android:id="@+id/view_refresh"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        app:refresh_line_color="#ffffff"
                        app:refresh_line_width="14" />

                    <Button
                        android:id="@+id/btn_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="startRefresh" />

                    <!-- 刷新:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 播放:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENPlayView
                        android:id="@+id/view_play"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        app:play_bg_line_color="#444a4f"
                        app:play_bg_line_width="12"
                        app:play_line_color="#ffffff"
                        app:play_line_width="14" />

                    <Button
                        android:id="@+id/btn_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="play" />

                    <Button
                        android:id="@+id/btn_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="pause" />

                    <!-- 播放:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 下载:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENDownloadView
                        android:id="@+id/view_download"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        app:download_bg_line_color="#3a3f45"
                        app:download_bg_line_width="9"
                        app:download_line_color="#ffffff"
                        app:download_line_width="9"
                        app:download_text_color="#ffffff"
                        app:download_text_size="14" />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="start" />

                    <Button
                        android:id="@+id/btn_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="reset" />

                    <!-- 下载:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 开关:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENScrollView
                        android:id="@+id/view_scroll"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        app:scroll_bg_line_color="#444a4f"
                        app:scroll_bg_line_width="10"
                        app:scroll_is_selected="false"
                        app:scroll_line_color="#ffffff"
                        app:scroll_line_width="10"
                        app:scroll_view_translation_x="16" />

                    <Button
                        android:id="@+id/btn_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="switch" />

                    <!-- 开关:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 音量:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENVolumeView
                        android:id="@+id/view_volume"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        app:volume_bg_line_color="#64696d"
                        app:volume_bg_line_width="10"
                        app:volume_line_color="#ffffff"
                        app:volume_line_width="10" />

                    <SeekBar
                        android:id="@+id/sb_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp" />

                    <!-- 音量:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 搜索:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENSearchView
                        android:id="@+id/view_search"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        app:search_dot_size="3"
                        app:search_line_color="#ffffff"
                        app:search_line_width="9" />

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="start" />

                    <!-- 搜索:End -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/white" />

                    <!-- 加载:Start -->

                    <com.hg.hollowgoods.Widget.ENView.ENLoadingView
                        android:id="@+id/view_loading"
                        android:layout_width="200dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="show" />

                    <Button
                        android:id="@+id/btn_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="hide" />

                    <!-- 加载:End -->

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </FrameLayout>

        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/floating_search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"
            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_menu="@menu/menu"
            app:floatingSearch_searchBarMarginLeft="16dp"
            app:floatingSearch_searchBarMarginRight="16dp"
            app:floatingSearch_searchBarMarginTop="16dp"
            app:floatingSearch_searchHint="@string/search"
            app:floatingSearch_showSearchKey="true"
            app:floatingSearch_suggestionsListAnimDuration="250"
            app:floatingSearch_viewTextColor="#323232" />

        <include
            android:id="@+id/view_common_no_data"
            layout="@layout/common_no_data"
            android:visibility="gone" />

        <include
            android:id="@+id/view_common_load_data_center"
            layout="@layout/common_load_data_center"
            android:visibility="gone" />

        <include
            android:id="@+id/view_common_load_data_bottom"
            layout="@layout/common_load_data_bottom"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
