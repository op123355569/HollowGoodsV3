<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="62dp"
        android:height="62dp"
        android:gravity="center">
        <shape>
            <solid android:color="#000000" />
            <corners android:radius="1000dp" />
        </shape>
    </item>

    <item
        android:width="60dp"
        android:height="60dp"
        android:bottom="2dp"
        android:gravity="center"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <corners android:radius="1000dp" />
            <gradient
                android:angle="270"
                android:centerColor="#FF1A1A"
                android:endColor="#00000000"
                android:startColor="#FF1A1A" />
        </shape>
    </item>

    <item
        android:width="60dp"
        android:height="60dp"
        android:bottom="2dp"
        android:gravity="center"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <corners android:radius="1000dp" />
            <gradient
                android:angle="90"
                android:centerColor="#FFFFFF"
                android:endColor="#00000000"
                android:startColor="#FFFFFF" />
        </shape>
    </item>

    <item
        android:width="25dp"
        android:height="25dp"
        android:gravity="center">
        <shape>
            <corners android:radius="1000dp" />
            <solid android:color="#000000" />
        </shape>
    </item>

    <item
        android:width="23dp"
        android:height="23dp"
        android:gravity="center">
        <shape>
            <corners android:radius="1000dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item
        android:width="16dp"
        android:height="16dp"
        android:gravity="center">
        <shape>
            <corners android:radius="1000dp" />
            <solid android:color="#000000" />
        </shape>
    </item>

    <item
        android:width="14dp"
        android:height="14dp"
        android:gravity="center">
        <shape>
            <corners android:radius="1000dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item
        android:width="18dp"
        android:height="1dp"
        android:gravity="center_vertical"
        android:left="1dp">
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>

    <item
        android:width="18dp"
        android:height="1dp"
        android:gravity="center_vertical|right"
        android:right="1dp">
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>


</layer-list>